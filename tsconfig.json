{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@layouts/*": ["layouts/*"],
            "@assets/*": ["assets/*"],
        }
    },
    "include": [
        "src"
    ],
    "files": [
        "src/index.d.ts"
    ],
    "compileOnSave": false
}
